@page
@model ServiceHost.Areas.Administration.Pages.Accounts.Account.Role.CreateModel

<div class="row" id="ProductCategoriesDiv">
	<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">ایحاد نقش جدید</h3>
			</div>
			<div class="panel-body">
				<div class="row">
					<div class="col-md-12 col-sm-12 col-xs-12">
						<form method="post">
							<div class="row">
								<div class="col-md-12">
									<div class="form-group">
										<label asp-for="Command.Name" class="control-label">نقش</label>
										<input type="text" class="form-control" asp-for="Command.Name">
										<span asp-validation-for="Command.Name" class="error"></span>
									</div>
								</div>
							</div>
							<a asp-page="Index" type="button" class="btn btn-default waves-effect">بازگشت</a>
							<button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
